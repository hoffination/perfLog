{
	"name": "perf-log-web",
	"private": true,
	"version": "0.0.0",
	"description": "perf-log-web",
	"repository": "https://github.com/hoffination/perfLog/perf-log-web",
	"license": "UNLICENSED",
	"dependencies": {
		"angular": "1.6.5",
		"bootstrap-less": "3.3.8",
		"angular-ui-bootstrap": "2.5.0",
		"angular-ui-router": "0.4.2"
	},
	"devDependencies": {
		"angular-mocks": "1.6.5",
		"babel-cli": "6.24.1",
		"babel-polyfill": "6.23.0",
		"babel-preset-es2015-without-strict": "0.0.4",
		"browser-sync": "2.18.13",
		"browserify": "14.0.0",
		"concat-glob-cli": "0.1.0",
		"cpx": "1.5.0",
		"d3": "4.10.0",
		"eslint": "4.4.1",
		"eslint-config-angular": "0.5.0",
		"eslint-plugin-angular": "3.0.2",
		"less": "2.7.2",
		"mkdirp": "0.5.1",
		"npm-html2js": "0.1.8",
		"npm-run-all": "4.0.2",
		"onchange": "3.2.1",
		"postbuild": "2.0.0",
		"prepend-file-cli": "^1.0.6",
		"rimraf": "2.6.1",
		"stylelint": "8.0.0",
		"uglify-js": "3.0.26"
	},
	"scripts": {
		"browserify": "browserify ./build/perf-log-web-concat.js -o ./build/perf-log-web-browserify.js",
		"browserify-dev": "browserify --insert-globals ./build/perf-log-web-concat.js -o ./dist/js/perf-log-web.js",
		"babel": "babel ./build/perf-log-web-browserify.js --out-file ./build/perf-log-web-babel.js --presets=es2015-without-strict",
		"babel:polyfill": "prepend ./build/perf-log-web-concat.js \"require('babel-polyfill');\"",
		"build": "run-s build:* bundle:js",
		"build-dev": "run-s build:* bundle:js-dev postbuild",
		"build:dist": "mkdirp ./dist/js ./dist/css ./dist/html ./build/ -p",
		"build:css": "run-s concat:less lint:less less",
		"build:html": "npm-html2js -i \"./src/**/!(index).html\" -o ./build/perf-log-web-templates.js -m perf-log-web-templates -b ./src",
		"bundle:js": "run-s lint:js concat:* babel:polyfill browserify babel uglify",
		"bundle:js-dev": "run-s lint:js concat:* browserify-dev",
		"clean": "rimraf ./build/* ./dist/{css/*,fonts/*,html/*,images/*,js/*,index.html}",
		"clean:purge": "rimraf ./dist ./build ./node_modules",
		"concat:js": "concat-glob-cli -f \"./src/**/!(require|*module).js\" -o ./build/perf-log-web-js.js",
		"concat:less": "concat-glob-cli -f \"./src/**/!(import).less\" -o ./build/perf-log-web.less && concat -o ./build/perf-log-web-concat.less ./src/import.less ./build/perf-log-web.less",
		"concat:html": "concat -o ./build/perf-log-web-src.js ./src/perfLog.module.js ./build/perf-log-web-js.js ./build/perf-log-web-templates.js",
		"concat:require": "concat -o ./build/perf-log-web-concat.js ./src/require.js ./build/perf-log-web-src.js",
		"copy": "run-s copy:*",
		"copy:fonts": "cpx \"./src/fonts/**/*\" ./dist/css",
		"less": "lessc ./build/perf-log-web-concat.less ./dist/css/perf-log-web.css",
		"lint:js": "eslint ./src",
		"lint:less": "stylelint ./src/import.less --syntax less",
		"postbuild": "run-s copy postbuild:index",
		"postbuild:index": "postbuild -i ./src/index.html -o ./dist/index.html -g ./dist/ -c ./dist/css -j ./dist/js",
		"preinstall": "npm prune",
		"serve": "browser-sync start -s ./dist",
		"uglify": "uglifyjs ./build/perf-log-web-babel.js -c -o ./dist/js/perf-log-web.js",
		"watch": "run-p serve watch:*",
		"dev-watch": "run-p serve dev-watch:js",
		"watch:css": "onchange \"./src/**/*.less\" -- run-s build:css",
		"watch:html": "onchange \"./src/**/*.html\" -- run-s build:html",
		"watch:images": "onchange \"./src/images/**/*\" -- run-s build:images",
		"dev-watch:js": "onchange \"./src/**/*.js\" -- run-s build-dev",
		"watch:js": "onchange \"./src/**/*.js\" -- run-s build:js"
	}
}
